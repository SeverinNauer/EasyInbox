<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
	<Style Selector="TabControl">
		<Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
	</Style>
    <Style Selector="TabItem.first">
        <Setter Property="Margin" Value="0 20 0 0" />
    </Style>
	<Style Selector="TabItem Path">
		<Setter Property="Opacity" Value="0.5" />
	</Style>
    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{DynamicResource SecondarySelectedBrush}" />
    </Style>
	<Style Selector="TabItem:selected Path">
		<Setter Property="Opacity" Value="0.9" />
	</Style>
	<Style Selector="TabItem:pointerover">
		<Setter Property="Background" Value="{DynamicResource SecondaryHoverBrush}" />
	</Style>	
	<Style Selector="TabItem:pointerover Path">
		<Setter Property="Opacity" Value="1" />
	</Style>
</Styles>