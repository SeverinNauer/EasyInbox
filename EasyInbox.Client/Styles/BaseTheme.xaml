<Style 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Style.Resources>
        <Color x:Key="SecondaryBackgroundColor">#414244</Color>
        <Color x:Key="WhiteColor">#ffffff</Color>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryBackgroundColor}" Opacity="1"/>
        <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{DynamicResource WhiteColor}" Opacity="0.5"/>
        <SolidColorBrush x:Key="SecondarySelectedBrush" Color="{DynamicResource WhiteColor}" Opacity="0.3"/>
    </Style.Resources>
</Style>